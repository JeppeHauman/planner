// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  shift Shift?
}

model Shift {
  shiftId   String   @id @default(auto()) @map("_id") @db.ObjectId
  employee  Employee @relation(fields: [shiftId], references: [id])
  timeStart DateTime
  timeEnd   DateTime
}
